  <filter>
    <filter-name>urlFilter</filter-name>
    <filter-class>com.wjh.learn.filter.URLFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>urlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- error code page -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error/404.jsp</location>
  </error-page>

